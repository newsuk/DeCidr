{
  "name": "decidr",
  "version": "1.0.0",
  "description": "Suggests an available cidr range for a peering connection",
  "main": "lib/index.js",
  "repository": "git@github.com:newsuk/DeCidr.git",
  "author": "News UK & Ireland Ltd",
  "license": "BSD-3-Clause",
  "dependencies": {
    "argparse": "^1.0.10",
    "aws-sdk": "^2.305.0",
    "cidr-overlap": "^0.0.4",
    "ip-cidr": "^2.0.0",
    "node-cidr": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-mocha": "^5.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "lint-staged": "^7.1.0",
    "mocha": "^5.1.0",
    "nyc": "^11.7.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.12.1",
    "release-documentation-cli": "^1.8.6",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0"
  },
  "scripts": {
    "build": "babel src -d lib --copy-files",
    "lint": "./node_modules/.bin/eslint src/* --fix",
    "lint-staged": "lint-staged",
    "test": "nyc mocha -r chai/register-should --require babel-core/register './src/**/*.test.js'",
    "test:unit": "mocha -r chai/register-should --require babel-core/register './src/**/*.test.js' --exclude './src/**/*.e2e.test.js'",
    "test:e2e": "mocha -r chai/register-should --require babel-core/register './src/**/*.e2e.test.js'",
    "prepare": "npm run build",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0"
  },
  "nyc": {
    "include": [
      "./src/**/*.js"
    ],
    "exclude": [
      "./src/**/*.test.js",
      "./src/index.js"
    ],
    "sourceMap": true,
    "instrument": true,
    "require": [
      "babel-register"
    ],
    "all": true,
    "reporter": [
      "html",
      "text-summary"
    ]
  },
  "pre-commit": [
    "precommit-msg",
    "lint-staged",
    "test:unit"
  ],
  "lint-staged": {
    "src/**/*.js": [
      "./node_modules/.bin/eslint src/* --fix",
      "git add"
    ]
  },
  "bin": {
    "DeCidr": "./lib/index.js"
  }
}
